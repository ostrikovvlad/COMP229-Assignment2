@model RecipeListViewModel
@{
    ViewBag.Title = "All Recipes";
    ViewBag.MyHeader = "All Recipes";
    Layout = "_AdminLayout";
}
<table class="w3-table-all">
    <tr class="w3-border-black">
        <th>ID</th>
        <th>Title</th>
        <th>Author</th>
        <th>Actions</th>
    </tr>
    @foreach (Recipe r in Model.Recipes)
    {
        <tr>
            <td>@r.RecipeId</td>
            <td>@r.Title</td>
            <td>@r.Name</td>
            <td>
                <form id="@r.RecipeId" asp-action="Delete" asp-controller="Admin" method="post">
                    <input type="hidden" name="RecipeId" value="@r.RecipeId" />
                    <a class="w3-btn" style="background-color:burlywood;color:white;" asp-action="Edit" asp-route-recipeId="@r.RecipeId" asp-controller="Admin">Edit</a>
                    <button class="w3-btn" style="background-color:brown;color:white;" type="submit">Delete</button>
                </form>
            </td>
        </tr>
    }
</table>
<div>
    <div page-model="@Model.PagingInfo"
         page-action="Index" page-classes-enabled="true"
         page-class="btn"
         page-class-normal="w3-btn w3-dark-gray"
         page-class-selected="w3-btn w3-disabled w3-light-gray w3-border-black">
    </div>
</div>
<a class="w3-btn w3-dark-gray w3-margin-top w3-text-white" style="margin-right:16px;" asp-action="Index" asp-controller="Recipe">Back to Main</a><a class="w3-btn w3-light-green w3-margin-top" style="color:white !important;" asp-action="AddRecipe" asp-controller="Admin">Add Recipe</a>
