@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/css/StyleSheet.css" rel="stylesheet" />
    <script src="~/javascript/tastyJS.js"></script>
    <title>@ViewBag.Title</title>
</head>
<body>
    <div class="w3-top">
        <div class="w3-bar w3-white w3-padding w3-card" style="letter-spacing:4px;">
            <a asp-action="Index" class="w3-bar-item w3-button">Tasty Recipes</a>
            <form asp-controller="Recipe" asp-action="List" method="get">
                <input class="w3-bar-item" type="text" id="keyword" name="keyword"  placeholder="Search by Keyword" />
                <button type="submit" class="w3-bar-item w3-button w3-light-gray">Search</button>
            </form>
            <div class="w3-right w3-hide-small">
                <a asp-action="Index" class="w3-bar-item w3-button">About</a>
                <a asp-action="List" asp-route-recipePage="1" asp-route-keyword="" class="w3-bar-item w3-button">Recipes</a>
            </div>
        </div>
    </div>
    <div>
        @RenderBody()
    </div>
</body>
</html>
