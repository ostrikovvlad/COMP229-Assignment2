<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="/css/StyleSheet.css" rel="stylesheet" />
    <script src="~/javascript/tastyJS.js"></script>
    <title>@ViewBag.Title</title>
</head>
<body>
    <header>
        <div class="w3-bar w3-white w3-padding w3-card w3-top" style="padding-left:24px; padding-right:24px;">
            <a class="w3-bar-item w3-button" asp-controller="Admin" asp-action="Index">@ViewBag.MyHeader</a>
            <div class="w3-right w3-hide-small">
                <a class="w3-bar-item w3-button w3-light-blue" asp-action="Logout" asp-controller="Account">Log Out</a>
            </div>
        </div>
    </header>
    <div class="w3-content w3-padding-64" style="max-width:1100px;">
        @if (TempData["message"] != null)
        {
            <div class="w3-wide w3-text-green w3-left w3-large w3-padding-16" style="padding-left:24px;">@TempData["message"]</div>
        }
        @RenderBody()
    </div>
    <footer class="w3-bottom w3-hide-small w3-hide-medium">
        <div class="w3-bar w3-white w3-border-top w3-padding-16 w3-center">
            <span style="text-align:center!important; font-size: 14px!important">&copy; Copyright - F2019 COMP229 - Project by Group 001. All Rights Reserved</span><br />
            <span style="text-align:center!important; font-size: 12px!important">Members: Andrey Paramonov, Nataliia Arsenieva, Vladislav Ostrikov</span>
        </div>
    </footer>
</body>
</html>
